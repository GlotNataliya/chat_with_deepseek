<div class="p-5 rounded-5 custom-input bg-light mb-5">
  <%= form_with model: [chat, Message.new], local: true do |f| %>
    <div class="form-group" data-controller="autosize-textarea">
      <%= f.text_area :content, rows: 2, required: true, placeholder: "Message DeepSeek",
                                  class: "form-control",
                                  data: { "autosize-textarea-target": "textarea",
                                  action: "input->autosize-textarea#adjustHeight" }
      %>
    </div>
    <div class="accordion accordion-flush mt-3 rounded-5" id="accordionFlushExample">
      <div class="accordion-item mb-2">
        <h2 class="accordion-header" id="flush-headingOne">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
            Settings
          </button>
        </h2>
        <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
          <div class="accordion-body" data-controller="disable-fields">
            <div class="form-group row">
              <%= f.label :role, class: "col-sm-4 col-form-label" %>
              <div class="col-sm-6">
                <%= f.select :deepseek_model_role, Message.role_choices, {}, value: "user", class: "form-select mb-3" %>
              </div>
            </div>
            <%= f.fields_for :setting_attributes do |setting_form| %>
              <div class="form-group row">
                <%= setting_form.label :model_name, class: "col-sm-4 col-form-label" %>
                <div class="col-sm-6">
                  <%= setting_form.select :deepseek_model_name, Setting.model_choices, {}, value: "deepseek-chat", class: "form-select mb-3",
                                data: { action: "change->disable-fields#toggle", disable_fields_target: "modelSelect" }  %>
                </div>
              </div>
              <div class="form-group row">
                <%= setting_form.label :top_p, "Top_p (0-1):", class: "col-sm-4 col-form-label" %>
                <div class="col-sm-3">
                  <%= setting_form.number_field :top_p, value: 0.9, step: 0.1, min: 0, max: 1, class: "form-control mb-3",
                                      data: { disable_fields_target: "topField" } %>
                </div>
              </div>
              <div class="form-group row">
                <%= setting_form.label :temperature, "Temperature (0-1):", class: "col-sm-4 col-form-label" %>
                <div class="col-sm-3">
                  <%= setting_form.number_field :temperature, value: 0.7, step: 0.1, min: 0, max: 1.5, class: "form-control mb-3",
                                      data: { disable_fields_target: "temperatureField" } %>
                </div>
              </div>
              <div class="form-group row">
                <%= setting_form.label :max_tokens, "Max Tokens:", class: "col-sm-4 col-form-label" %>
                <div class="col-sm-3">
                  <%= setting_form.number_field :max_tokens, value: 4000, min: 1, max: 8000, class: "form-control mb-3" %>
                </div>
              </div>
              <div class="form-group row">
                <%= setting_form.label :top_p, "Top_p (0-1):", class: "col-sm-4 col-form-label" %>
                <div class="col-sm-3">
                  <%= setting_form.number_field :top_p, value: 0.9, step: 0.1, min: 0, max: 1, class: "form-control mb-3", data: { disable_fields_target: "topField" } %>
                </div>
              </div>
              <div class="form-group row">
                <%= setting_form.label :stream, class: "col-sm-4 col-form-label" %>
                <div class="col-sm-3">
                  <%= setting_form.select :stream, options_for_select([['no', false], ['yes', true]]), {}, class: "form-select mb-3" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="d-flex flex-column">
      <%= button_tag(type: 'submit', class: 'btn btn-secondary mt-2') do %>
        <i class="bi bi-send"></i>
      <% end %>
    </div>
  <% end %>
</div>
